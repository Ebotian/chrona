{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "esnext",
    "target": "esnext",
    "types": ["react", "react-dom"],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chrono/tokens": ["packages/tokens/src/index.ts"],
      "@chrono/tokens/*": ["packages/tokens/src/*"],
      "@chrono/ui": ["packages/ui/src/index.ts"],
      "@chrono/ui/*": ["packages/ui/src/*"],
      "@chrono/motion": ["packages/motion/src/index.ts"],
      "@chrono/motion/*": ["packages/motion/src/*"],
      "@chrono/line-net": ["packages/line-net/src/index.ts"],
      "@chrono/line-net/*": ["packages/line-net/src/*"]
    }
  },
  "include": ["apps", "packages", "实现方案.md", "新构想.md"]
}
